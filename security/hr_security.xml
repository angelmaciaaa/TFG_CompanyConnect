<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define grupos de usuarios -->
    <record id="group_hr_attendance_own_reader" model="res.groups">
        <field name="name">Usuario: Leer sus propias asistencias</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_hr_attendance_manager" model="res.groups">
        <field name="name">Administrador de Asistencias</field>
        <field name="category_id" ref="base.module_category_human_resources_attendances"/>
    </record>

    <!-- Definir reglas de acceso para hr.attendance -->
    <record id="hr_attendance_rule_own_attendance" model="ir.rule">
        <field name="name">Base de usuarios: Leer sus propias asistencias</field>
        <field name="model_id" ref="model_hr_attendance"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_attendance.group_hr_attendance_own_reader'))]"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>
</odoo>
